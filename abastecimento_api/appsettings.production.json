{
  "ConnectionStrings": {
    "ConnectionString": "XpoProvider=Postgres;User ID=postgres;Password=${DB_PASSWORD};Server=${DB_HOST:-abastecimento-db};Port=${DB_PORT:-5432};Database=${DB_NAME:-abastecimento}",
    "EasyTestConnectionString": "Integrated Security=SSPI;Pooling=false;Data Source=(localdb)\\mssqllocaldb;Initial Catalog=AbastecimentoEasyTest"
  },
  "Authentication": {
    "Jwt": {
      "Issuer": "XafSecurity",
      "Audience": "${JWT_AUDIENCE}",
      "IssuerSigningKey": "${JWT_SIGNING_KEY}"
    },
    "AzureAd": {
      "Instance": "https://login.microsoftonline.com/",
      "Domain": "",
      "TenantId": "organizations",
      "ClientId": "[Configure ClientId in appsettings.json before use.]",
      "CallbackPath": "/ms_auth"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "DevExpress.ExpressApp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://0.0.0.0:5004"
      }
    },
    "Limits": {
      "MaxConcurrentConnections": 100,
      "MaxConcurrentUpgradedConnections": 100,
      "MaxRequestBodySize": 30000000,
      "KeepAliveTimeout": "00:02:00",
      "RequestHeadersTimeout": "00:01:00"
    }
  },
  "Cors": {
    "AllowedOrigins": ["*"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["*"],
    "AllowCredentials": false
  }
}